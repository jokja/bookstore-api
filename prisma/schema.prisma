// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Author {
  Author_ID    Int      @id @default(autoincrement())
  Name         String
  Pen_Name     String
  Email        String   @unique
  Is_Disabled  Boolean  @default(true)
  Hash         String
  Hashed_RT    String?
  Created_Time DateTime @default(now())
  Updated_Time DateTime @updatedAt

  Book  Book[]
  Sales Sales[]
  // @@map("author")
}

model Book {
  Book_ID      Int      @id @default(autoincrement())
  Author       Author   @relation(fields: [Author_ID], references: [Author_ID])
  Author_ID    Int
  Title        String
  Summary      String?
  Stock        Int
  Price        Int
  Cover_URL    String?
  Created_Time DateTime @default(now())
  Updated_Time DateTime @updatedAt

  // @@map("book")
}

model Sales {
  Sales_ID        Int      @id @default(autoincrement())
  Author          Author   @relation(fields: [Author_ID], references: [Author_ID])
  Author_ID       Int
  Recipient_Name  String
  Recipient_Email String
  Book_Title      String
  Quantity        Int
  Price_Per_Unit  Int
  Price_Total     Int
  Created_Time    DateTime @default(now())
  Updated_Time    DateTime @updatedAt

  // @@map("Sales")
}
